<Window x:Class="GlicemiasApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GlicemiasApp"
        mc:Ignorable="d"
        Title="Login" Height="178" Width="362">
    <Grid>
        <Canvas>

            <Label Content="Usuário" Canvas.Left="41" Canvas.Top="13"/>
            <TextBox Name="TbUsuario" Canvas.Left="96" Canvas.Top="13" Width="190" Height="23"/>

            <Label Content="Senha" Canvas.Top="48" Canvas.Left="49"/>
            <PasswordBox Name="PbSenha" Canvas.Left="96" Canvas.Top="51" Width="190" Height="23"/>

            <Button Name="BtLogin" Height="23" Width="90" Canvas.Left="96" Canvas.Top="97" Content="Login"/>

            <Button Name="BtCadastrar" Height="23" Width="90" Canvas.Left="196" Canvas.Top="97" Content="Cadastre-se"/>

        </Canvas>

    </Grid>
</Window>
